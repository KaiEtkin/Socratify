{
  "manifest_version": 3,
  "name": "Socratify",
  "version": "1.0",
  "description": "Research-backed AI learning tool; interactive Socratic method discussion chatbot.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
    
  },
  "icons":{
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
